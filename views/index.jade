extends layout

block content
  h1= title
  p Welcome to #{title}
  - if (messages.info)
    .message.info
      span= messages.info
  div
      form(action='/items',method='post')
        div(data-role='fieldcontain')
          fieldset(data-role='controlgroup')
            label(for='title') Title
              input(id='title',type='text',value='',placeholder='Sea',name='title')
        div#imagediv(data-role='fieldcontain')
          fieldset(data-role='controlgroup')
            label(for='url') Image url
              input(id='url',type='url',value='',placeholder='https://google/image.jpg',name='url')
        div(data-role='fieldcontain')   
          input(type='submit',value='Add item',data-transition='fade', data-theme='c')
